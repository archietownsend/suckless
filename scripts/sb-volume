#!/bin/sh

# Prints the current volume or ó°– if muted.

case $BLOCK_BUTTON in
	1) setsid -w -f st -e pulsemixer; pkill -RTMIN+10 "${STATUSBAR:-dwmblocks}" ;;
	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	4) wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+; kill -44 $(pidof dwmblocks) ;;
	5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%- ;;
	3) notify-send "ğŸ“¢ Volume module" "\- Shows volume ğŸ”Š, ğŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) st -e nvim "$0" ;;
esac

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ó°– and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo " ó°–â€‰" && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="ó°•¾ " ;;
	$((vol >= 30)) ) icon="ó°–€ " ;;
	$((vol >= 1)) ) icon="ó°•¿ " ;;
	* ) echo " ó°–" && exit ;;
esac

echo "â€‰â€‰$icon$vol%"
